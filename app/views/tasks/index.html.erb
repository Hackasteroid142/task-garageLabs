
<h1>To Do</h1>

<h2>Crear Tarea</h2>

<%= render 'form', task: @task %>

<h2>Sus tareas son las siguientes</h2>

<% @tasks.each do |task| %>
    <% if task.completed?%>
        
        <li> <%= task.title%> 
        <%= link_to "Editar", edit_task_url(task)%>
        <%= link_to "Borrar", task_url(task), method: :delete, data:{confirm: "Estas seguro?" }%>
        <%= link_to "Completar", complete_task_url(task), method: :patch%>
        </li> 
    <% else %>
    <p><%= task.completed? %></p>
        <li style="opacity:0.5;"> <%= task.title%> 
        <%= link_to "Borrar", task_url(task), method: :delete, data:{confirm: "Estas seguro?" }%>
        <%= link_to "no Completada", incomplete_task_url(task), method: :patch%>
        </li> 
    <% end %>
<% end %>
