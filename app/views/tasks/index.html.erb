<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>To Do</h1>

            <h3>Crear Tarea</h3>

            <%= render 'form', task: @task %>

            <h3>Sus tareas son las siguientes</h3>

            <% @tasks.each do |task| %>
                <% if task.completed?%>
                    <li class="task"> <%= task.title%> 
                    <%= link_to "Editar", edit_task_url(task)%>
                    <%= link_to "Borrar", task_url(task), method: :delete, data:{confirm: "Â¿Estas seguro?" }, class:"b-button"%>
                    <%= link_to "Completar", complete_task_url(task), method: :patch, class:"a-button"%>
                    </li> 
                <% else %>
                    <li class="data-task"> <%= task.title%> 
                    <%= link_to "Borrar", task_url(task), method: :delete, data:{confirm: "Â¿Estas seguro?" }, class:"b-button"%>
                    <%= link_to "No Completada", incomplete_task_url(task), method: :patch%>
                    </li> 
                <% end %>
            <% end %>
        </div>
    </div>
</div>

